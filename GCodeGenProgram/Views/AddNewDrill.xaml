<UserControl x:Class="GCodeGenProgram.Views.AddNewDrill"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GCodeGenProgram.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox HorizontalAlignment="Left" Margin="97,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" Text="{Binding X}"/>
        <Label Content="X" HorizontalAlignment="Left" Margin="21,34,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="97,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" Text="{Binding Y}"/>
        <Label Content="Y" HorizontalAlignment="Left" Margin="21,75,0,0" VerticalAlignment="Top"/>
        <Button Content="Create Drill" HorizontalAlignment="Left" Margin="28,124,0,0" VerticalAlignment="Top" Width="120" Command ="{Binding AddNewDrillCommand}">
        </Button>
    </Grid>
</UserControl>
